{
    "name": "node-app",
    "image": "docker.io/node:22",
    "containerUser": "node",
    "forwardPorts": [ 3000 ],   
    "workspaceFolder": "/app",
    "workspaceMount": "source=${localWorkspaceFolder},target=/app,type=bind,consistency=cached",
    "customizations": {
        "vscode": {
            "extensions": [
                "dbaeumer.vscode-eslint",
                "esbenp.prettier-vscode"
            ]
        }
    },
    "postCreateCommand": "bash -i -c 'cd /app && npm install'"
}